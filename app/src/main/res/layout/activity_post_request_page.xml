<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PostRequestPage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <EditText
        android:id="@+id/patient_name"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:background="@drawable/lavender_border"
        android:drawableLeft="@drawable/baseline_people_24"
        android:drawablePadding="8dp"
        android:hint="Full Name"
        android:padding="8dp" />

    <EditText
        android:id="@+id/patient_address"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:background="@drawable/lavender_border"
        android:drawableLeft="@drawable/baseline_add_location_24"
        android:drawablePadding="8dp"
        android:hint="Address"
        android:padding="8dp" />

    <EditText
        android:id="@+id/patient_contactnumber"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:background="@drawable/lavender_border"
        android:drawableLeft="@drawable/baseline_phone_24"
        android:drawablePadding="8dp"
        android:hint="Phone Number"
        android:inputType="number"
        android:padding="8dp" />

    <EditText
        android:id="@+id/patient_disease"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:background="@drawable/lavender_border"
        android:drawableLeft="@drawable/baseline_coronavirus_24"
        android:drawablePadding="8dp"
        android:hint="Disease"
        android:padding="8dp" />

    <EditText
        android:id="@+id/patient_description"
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:background="@drawable/lavender_border"
        android:drawableLeft="@drawable/baseline_description_24"
        android:drawablePadding="8dp"
        android:hint="Description"
        android:padding="8dp" />

        <Button
            android:id="@+id/post_button"
            android:layout_width="150dp"
            android:layout_height="70dp"
            android:layout_marginTop="30dp"
            android:text="Post"
            android:textSize="20sp"
            app:cornerRadius="50dp"
            android:layout_marginLeft="200dp"/>



    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>